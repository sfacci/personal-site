@{
    ViewBag.Title = "Home Page";
}
@section Styles{
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
}
<div class="jumbotron img-responsive container-fluid clearfix">
    
    <div id="jumbo-heading" class="col-sm-12 col-md-7">
        <h1 id="greeting" class="text-xs-center text-sm-left">Hi, I'm Sarah</h1>
        
    </div>

    <div id="jumbo-portrait" class="col-sm-5 col-md-5"  >
        <img id="portrait" src="@Url.Content("~/Content/avatar.jpg")" 
             class="img-circle img-responsive center-block" 
             alt="portrait of Sarah" /> 
        <h3 id="caption" class="text-xs-center text-sm-left">SCIENCE + SOFTWARE</h3>
    </div>

    <div id="jumbo-buttons" class="col-sm-7 col-md-7 ">
        <a class="btn btn-main-page col-xs-12" id="resume-button" href="@Url.Action("Index", "Resume")">
            <span class="block-anchor">Resume</span>
        </a>
        <a class="btn btn-main-page col-xs-12" id="projects-button" href="@Url.Action("Projects", "Home")">
            <span class="block-anchor">Projects</span>
        </a>
        <a class="btn btn-main-page col-xs-12" id="about-button" href="@Url.Action("About", "Home")">
            <span class="block-anchor">Why Me?</span>
        </a>
    </div>

    <div id="jumbo-quote" class="col-sm-7">
        
        <p> I have a BS in Biology from Cornell University and a Master's in Bioinformatics
        from Johns Hopkins University.</p>
        <p>I have a passion for data, interfaces, and all the code I can get my hands on.</p>
    </div>
    
    
</div>

